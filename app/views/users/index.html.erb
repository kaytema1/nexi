<h1>Users</h1>
<table class="zebra-striped">
	<% @users.each do |user| %>
	<tr>
		<td><%= link_to user.username, user %> 
			
			<% if current_user.admin? %>
		| <%= link_to "delete", user, :method => :delete, :confirm => "You sure?",
		:title => "Delete #{user.username}" %>
		<% end %> </td>
	
	</tr>
	<% end %>
</table>
<div class="pages">
	<div class=" digg_pagination">
		<%= will_paginate @users %>
	</div>
</div>
