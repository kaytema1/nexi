<table class="profile">
	<tr>
		<td class="main hero-unit" style="background: none"> <% unless @user.microposts.empty? %>
		<table class="front" summary="For signed-in users">
			<tr>
				<td class="main"><h1 class="micropost">What's up?</h1>
					 <%= render 'shared/micropost_form' %>
				<%= render 'shared/feed' %> </td>
				<table class="microposts zebra-striped" summary="User microposts">
			
				</table>
				
		</td>
		<% end %> <td class="sidebar round"><strong>Name</strong> <%= @user.username %>
		<br />
		<strong>URL</strong> <%= link_to user_path(@user), @user %>
		<br />
		<strong>Microposts</strong> <%= @user.microposts.count %>
		<%= render 'shared/stats' %>

		
		 </td>
	</tr>
</table>
<h1><%= @user.username %></h1>
<%= render 'follow_form' if signed_in? %>

<p>
	Email: <%= @user.email %>
</p>
<%= link_to 'Edit', edit_user_registration_path %> |
<% if current_user.admin? %>
<%= link_to 'List of Users', users_path %> | <%= link_to "Create New Article" , new_article_path %> | <%= link_to ' Manage Articles' ,manage_articles_path  %>
<% end %> 