<% title "Article Statuses" %>

<table>
  <tr>
    <th>Status</th>
  </tr>
  <% for article_status in @article_statuses %>
    <tr>
      <td><%= article_status.status %></td>
      <td><%= link_to "Show", article_status %></td>
      <td><%= link_to "Edit", edit_article_status_path(article_status) %></td>
      <td><%= link_to "Destroy", article_status, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Article Status", new_article_status_path %></p>
