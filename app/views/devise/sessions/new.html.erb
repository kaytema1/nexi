<h2> Sign In </h2>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<table>
	<tr>
		<td >Username</td>
		<td> <%= f.text_field :username, :class => "span6"  %></td>
	</tr>
	<tr>
		<td>Password</td>
		<td><%= f.password_field :password ,:class => "span6" %></td>
	</tr>
	<tr>
		<td></td>
		<td><% if devise_mapping.rememberable? -%>
		<div>
			<%= f.check_box :remember_me %> <%= f.label :remember_me %>
		</div> <% end -%></td>
	</tr>
	<tr>
		<td></td>
		<td>	<%= f.submit "Sign in" ,:class => "btn primary " %></td>
	</tr>
</table>

<% end %>

<%= render :partial => "devise/shared/links" %>